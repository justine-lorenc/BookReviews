<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav id="nav-bar">
        <img class="nav-item nav-logo" src="~/Content/Images/BookReviewsLogo.png" width="200" height="40" alt="Logo" />
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link " })
        @Html.ActionLink("Search", "Search", "Book", null, new { @class = "nav-item nav-link " })
    </nav>
    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
