@model BookReviews.Web.ViewModels.LoginVM

@{
    ViewBag.Title = "Log In";
}

<div>
    <h3>@ViewBag.Title</h3>

    @Html.Partial("_ResultMessage")

    <p>
        New? Create an account @Html.ActionLink("here", "Register", "Account", null, new { @class = "link-bold" }).
    </p>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-vertical" }))
    {
        @Html.AntiForgeryToken()

        <div class="col-90">
            @Html.LabelFor(m => m.EmailAddress)
            @Html.TextBoxFor(m => m.EmailAddress, new { maxLength = 100, @class = "form-field" })
            @Html.ValidationMessageFor(m => m.EmailAddress, null, new { @class = "form-error" })
        </div>
        <div class="col-90">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { maxLength = 50, type = "password", @class = "form-field" })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "form-error" })
        </div>
        <div>
            <button type="submit" value="Submit">Log In</button>
        </div>
    }
</div>
